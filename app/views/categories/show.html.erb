<h1 class="text-center mt-4 text-dark">Category: <%= @category.name %></h1>

<% if logged_in? and current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-warning" %>
  </div>
<% end %>

<h3 class="text-center mt-4 text-dark">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @all_articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @all_articles, :container => false %>
</div>