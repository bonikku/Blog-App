<h1 class="text-center mt-4 text-dark"><%= @user.username %>'s profile</h1>
<%= gravatar_for @user, size: 150 %>

<% if logged_in? and @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-warning" %>
  </div>
<% end %>

<h3 class="text-center mt-4 text-dark">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @all_articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @all_articles, :container => false %>
</div>