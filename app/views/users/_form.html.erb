<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-4 m-7 bg-light text-gray rounded", local: true ) do |f| %>
        <div class="form-group">
          <%#= f.label :username, class: "col-2 col-form-label" %>
          <div class="m-1">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group">
          <%#= f.label :email, class: "col-2 col-form-label" %>
          <div class="m-1">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group">
          <%#= f.label :password, class: "col-2 col-form-label" %>
          <div class="m-1">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update" , class: "btn btn-sblue btn") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-12 text-center">
<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "btn btn-dblue mt-3 justify-content-center" %>
</div>
